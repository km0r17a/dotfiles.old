{
  "title": "My settings",
  "rules": [
    {
      "description": "Force Map ctrl + J to return",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ]
        }
      ]
    },
    {
      "description": "Shift + Spacebar to toggle input source",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": ["control"]
            }
          ]
        }
      ]
    }
  ]
}
